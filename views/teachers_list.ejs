<%- include("partials/header") -%>

    <div>
        <form action="/requestTeacher/<%=id%>" method="POST">
            <% for(var i=0;i<filteredTeachers.length;i++){ %>
                <div>
                    <input name="selectedTeacher" class="form-check-input" type="checkbox" value="<%=filteredTeachers[i]%>" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                    <%=filteredTeachers[i]%>
                    </label>
                </div>
            <% } %>
            <button type="submit" class="btn btn-primary">Request Mentor</button>
        </form>
    </div>

<%- include("partials/footer") -%>